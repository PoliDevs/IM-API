<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Mabry Pro, Montserrat, Poppins, sans-serif" />
    </mj-attributes>
    <mj-preview><mj-text font-size="21px" color="#000" font-family="Mabry Pro, Montserrat, Poppins, sans-serif" font-style="normal" font-weight="400">iMenu - Pedido listo!🍔</mj-text></mj-preview>
  </mj-head>
  <mj-body>
    <mj-section background-size="cover" background-repeat="no-repeat">
      <mj-column>
        <mj-image width="430px" height="414px" padding-bottom="16px" src="http://tenkiweb.com/imenu/emails/tuPedidoListo.jpg"></mj-image>
      </mj-column>
    </mj-section>
    <mj-section>
    	<mj-column>
      	<mj-divider border-width="2px" border-style="solid" width="298px" border-color="#E6E6E6" padding-bottom="16px"></mj-divider>
        <mj-spacer height="10px" />
        
        <mj-text  align="center" font-style="normal" font-size="10px" color="#545454" font-weight="400" line-height="1px" font-family="Mabry Pro, Montserrat, Poppins, sans-serif" padding-bottom="16px">{name}</mj-text>
        
        <mj-text  align="center" font-style="normal" font-size="16px" color="#212121" font-weight="700" line-height="1px" font-family="Mabry Pro, Montserrat, Poppins, sans-serif" padding-top="16px" padding-bottom="16px">Local: {local}</mj-text>
        
        <mj-text  align="center" font-style="normal" font-size="10px" color="#545454" font-weight="400" line-height="1px" font-family="Mabry Pro, Montserrat, Poppins, sans-serif" padding-top="16px">Pedido: {ordeR}</mj-text>
        
        <mj-spacer height="10px" />
        <mj-divider border-width="2px" border-style="solid" width="298px" border-color="#E6E6E6" padding-top="16px" padding-bottom="16px"></mj-divider>
        <mj-text  align="center" font-style="normal" font-size="10px" color="#545454" font-weight="400" line-height="1px" font-family="Mabry Pro, Montserrat, Poppins, sans-serif">¿Necesitas ayuda?</mj-text>
      </mj-column>
    </mj-section>
    <mj-section>
    	<mj-column>
      	<mj-image width="100px" src="http://tenkiweb.com/imenu/img/imenu.png"></mj-image>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>