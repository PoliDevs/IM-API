      <mj-column class="mobile-padding-top" padding-right="1px" padding-top="10px" width="287px">
        <mj-text color="#989898" font-family="Mabry Pro, Montserrat, Poppins, sans-serif" font-size="16px" font-style="normal" font-weight="400" line-height="1px" letter-spacing="-0.36px" align="center">
          <p class="mobile-p-apreciamos">{apreciamos}</p>
        </mj-text>
      </mj-column>
      <mj-column width="15%" padding-top="10px">
        <mj-image width="20px" height="20px" padding-left="0px" src="http://tenkiweb.com/imenu/img/red-heart.png"></mj-image>
      </mj-column>
      <mj-column width="40%">
        <mj-image width="100px" src="http://tenkiweb.com/imenu/img/imenu.png"></mj-image>
      </mj-column>
    </mj-section>
    <mj-section class="mobile-padding-top" padding-left="100px" padding-right="50px" padding-top="0px">
      <mj-column width="20%">
        <mj-image class="mobile-lifebuoy" width="30px" height="30px" padding-right="1px" src="http://tenkiweb.com/imenu/img/lifebuoy.png"></mj-image>
      </mj-column>
      <mj-column padding-left="0px" width="80%">
        <mj-text padding-left="5px" width="296px" color="#98989898" font-family="Mabry Pro, Montserrat, Poppins, sans-serif" font-size="16px" font-style="normal" font-weight="700" line-height="20px" letter-spacing="-0.72px" padding-top="0px" height="30px">
          <p class="mobile-p-tupago">{necesitasAyuda}</p>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>